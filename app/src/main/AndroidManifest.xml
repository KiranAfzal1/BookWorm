<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookworm">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".app.MyApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookWorm">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5145605037469366~6578769994" />

        <activity
            android:name=".app.ui.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BookWorm.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.ui.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.BookWorm" />

        <activity android:name=".app.ui.activities.RegisterActivity" android:exported="false" />
        <activity android:name=".app.ui.activities.MainActivity" android:exported="false" />
        <activity android:name=".app.ui.activities.BookDetailsActivity" android:exported="false" />
        <activity android:name=".app.ui.activities.ReadingActivity" android:exported="false" />

    </application>

</manifest>
